{
    "name": "demyanovs/php-highlight",
    "description": "A PHP library for highlighting code syntax.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php-highlight",
        "php_highlight",
        "codehighlighter",
        "codehighlighting",
        "syntax-highlighting"
    ],    
    "authors": [
        {
            "name": "Demyanov Vyacheslav",
            "email": "demyanovs@gmail.com"
        }
    ],
    "require": {
    },
    "autoload": {
        "psr-4": {
            "Demyanovs\\PHPHighlight\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Demyanovs\\PHPHighlight\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "squizlabs/php_codesniffer": "*",
        "doctrine/coding-standard": "^12.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "linter": "./vendor/bin/phpcs"
    }
}
